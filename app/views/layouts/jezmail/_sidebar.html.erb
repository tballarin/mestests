<%
r = Random.rand(10...100)
   if r <= 50
     @etat = "success"
   elsif r <= 80
     @etat = "warning"
   else
     @etat = "danger"
   end

%>
<strong>Utilisation :</strong>
<div class="progress progress-striped active">
  <div class="progress-bar progress-bar-<%=@etat%>" role="progressbar" aria-valuenow="<%=r%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=r%>%">
    <span class="sr-only"><%=r%>% Complete</span>
  </div>
</div>
<%= link_to "<button type='button' class='btn btn-default'>Boite de reception <span class='badge'>#{@nbmess}</span> </button>".html_safe, root_path,data: {disable_with: '<button type="button" class="btn btn-default">Loading ....</button>' }%><br><br>
